{
  "name": "convertisseur-unites",
  "version": "1.0.0",
  "description": "Convertisseur d'unités avec tests automatisés",
  "main": "index.js",
  "scripts": {
    "start": "http-server -p 3000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e"
  },
  "keywords": [
    "convertisseur",
    "unités",
    "tests",
    "jest",
    "playwright"
  ],
  "author": "EPSI SN2",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@playwright/test": "^1.40.0",
    "babel-jest": "^29.7.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}